---
import { siteConfig } from '../config';
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-content">
    <div class="footer-section">
      <h3>{siteConfig.name}</h3>
      <p>{siteConfig.description} {siteConfig.author.name}</p>
    </div>

    <div class="footer-section">
      <h4>Links</h4>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>

    <div class="footer-section">
      <h4>Social</h4>
      <div class="social-links">
        <a href={siteConfig.author.social.github} target="_blank" rel="noopener noreferrer">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
        </a>
        <a href={siteConfig.author.social.twitter} target="_blank" rel="noopener noreferrer">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>
        </a>
        <a href={"https://discord.gg/" + siteConfig.author.social.discord} target="_blank" rel="noopener noreferrer">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="9" cy="12" r="1.5"/>
            <circle cx="15" cy="12" r="1.5"/>
            <path d="M7.5 4h9a3 3 0 0 1 3 3v7.5c0 3-2 5.5-6 5.5h-3c-4 0-6-2.5-6-5.5V7a3 3 0 0 1 3-3z"/>
            <path d="M7.5 4c0 0 .5-2 2-2h5c1.5 0 2 2 2 2"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
  <div class="footer-bottom">
    <p>&copy; {currentYear} {siteConfig.name} by {siteConfig.author.name}. All rights reserved.</p>
  </div>
</footer>

<style>
  .footer {
    background: var(--surface-1);
    border-top: 1px solid var(--surface-2);
    padding: 3rem 0 0;
    margin-top: 4rem;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 2rem;
  }

  .footer-section h3 {
    color: var(--text-1);
    font-size: 1.5rem;
    margin: 0 0 1rem;
  }

  .footer-section h4 {
    color: var(--text-1);
    font-size: 1.1rem;
    margin: 0 0 1rem;
  }

  .footer-section p {
    color: var(--text-2);
    margin: 0;
    line-height: 1.6;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section ul li {
    margin-bottom: 0.5rem;
  }

  .footer-section ul li a {
    color: var(--text-2);
    text-decoration: none;
    transition: color 0.3s;
  }

  .footer-section ul li a:hover {
    color: var(--text-1);
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    color: var(--text-2);
    transition: color 0.3s;
  }

  .social-links a:hover {
    color: var(--text-1);
  }

  .footer-bottom {
    margin-top: 3rem;
    padding: 1.5rem 2rem;
    text-align: center;
    border-top: 1px solid var(--surface-2);
  }

  .footer-bottom p {
    color: var(--text-2);
    margin: 0;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      padding: 0 1rem;
      text-align: center;
    }

    .social-links {
      justify-content: center;
    }

    .footer {
      padding: 2rem 0 0;
      margin-top: 2rem;
    }

    .footer-bottom {
      margin-top: 2rem;
      padding: 1rem;
    }
  }
</style>
